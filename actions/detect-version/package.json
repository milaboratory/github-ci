{
  "name": "detect-version",
  "version": "1.0.1",
  "private": true,
  "description": "MiLaboratory code version detector",
  "main": "lib/main.js",
  "scripts": {
    "build": "vite build",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --passWithNoTests",
    "release": "npm run build && npm run format && npm run lint && npm run package",
    "all": "npm run release && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/milaboratory/github-ci.git"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "DenKoren <denkoren@yandex.ru>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@types/semver": "^7.5.7",
    "semver": "^7.6.3"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@types/node": "^20.11.8",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.56.0",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-jest": "^27.9.0",
    "jest": "^29.7.0",
    "js-yaml": "^4.1.0",
    "prettier": "3.2.5",
    "rollup-plugin-node-externals": "^7.1.3",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.2.3"
  }
}
