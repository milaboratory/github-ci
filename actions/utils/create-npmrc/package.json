{
  "name": "github-action-create-npmrc",
  "version": "1.0.0",
  "description": "GitHub Action for generating a .npmrc",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint **/*.ts --fix",
    "lint-check": "eslint **/*.ts"
  },
  "author": "Vladimir Antropov",
  "license": "ISC",
  "dependencies": {
    "@actions/core": "^1.10.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.8",
    "@typescript-eslint/eslint-plugin": "^8.6.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.57.1",
    "eslint-plugin-github": "^5.0.2",
    "eslint-plugin-prettier": "^5.2.1",
    "prettier": "^3.3.3",
    "typescript": "^5.6.0"
  }
}
